@model PortfolyoSitesi.Data.Service

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Update Service</h1>

<form method="post">

    @Html.HiddenFor(x => x.ServiceId)

    <label>Title</label>
    <input type="text" class="form-control" name="Title" value="@Model.Title" />

    <label>Description</label>
    <input type="text" class="form-control" name="Description" value="@Model.Description" />

    <label>Icon URL</label>
    <input type="text" class="form-control" name="IconURL" value="@Model.IconUrl" />

    <br />

    <button type="submit" class="btn btn-success">Update</button>

</form>
