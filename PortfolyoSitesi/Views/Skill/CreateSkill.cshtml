
@{
    ViewData["Title"] = "CreateSkill";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>

<style>
    /* Track */
    input[type=range] {
        -webkit-appearance: none;
        appearance: none;
        height: 8px; /* track yüksekliği */
        border-radius: 9999px;
        background: #e5e7eb; /* gray-200 */
        outline: none;
    }

        /* Webkit (Chrome, Edge, Safari) */
        input[type=range]::-webkit-slider-thumb {
            -webkit-appearance: none;
            appearance: none;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background: #4f46e5; /* indigo */
            cursor: pointer;
            box-shadow: 0 0 0 4px rgba(79,70,229,0.25);
            margin-top: -6px; /* 🔥 TAM ORTA */
        }

        /* Firefox */
        input[type=range]::-moz-range-thumb {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background: #4f46e5;
            cursor: pointer;
            border: none;
            box-shadow: 0 0 0 4px rgba(79,70,229,0.25);
        }

        input[type=range]::-moz-range-track {
            height: 8px;
            background: #e5e7eb;
            border-radius: 9999px;
        }
</style>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-50 to-blue-100 p-6">

    <div class="w-full max-w-lg bg-white rounded-2xl shadow-xl p-8">

        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-extrabold text-gray-800">Add New Skill</h1>
            <p class="text-gray-500 mt-1">
                Set your skill level between 0 and 100
            </p>
        </div>

        <form method="post" class="space-y-6">

            <!-- Skill Name -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Skill Name
                </label>
                <input type="text"
                       name="SkillName"
                       placeholder="e.g. C#, JavaScript"
                       required
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                           focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500
                           outline-none transition" />
            </div>

            <!-- Skill Percentage -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-2">
                    Skill Percentage
                </label>

                <div class="flex items-center gap-4">
                    <input type="range"
                           name="SkillPercentage"
                           min="0"
                           max="100"
                           value="50"
                           oninput="percentageValue.innerText = this.value + '%'"
                           class="w-full cursor-pointer" />

                    <span id="percentageValue"
                          class="min-w-[52px] text-center text-sm font-bold
                               text-indigo-600 bg-indigo-50 px-2 py-1 rounded">
                        50%
                    </span>
                </div>
            </div>

            <!-- Button -->
            <div class="pt-4">
                <button type="submit"
                        class="w-full flex items-center justify-center gap-2
                           bg-indigo-600 hover:bg-indigo-700
                           text-white font-semibold py-3 rounded-lg
                           transition shadow-lg shadow-indigo-200">

                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 4v16m8-8H4" />
                    </svg>

                    Add Skill
                </button>
            </div>

        </form>
    </div>

</div>
