@model List<PortfolyoSitesi.Data.Skill>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Skill</h1>

<div class="container">
	<table class="table table-bordered">

		<thead>

			<tr>
				<td>SkillID</td>
				<td>SkillName</td>
				<td>SkillPercentage</td>
				<td>Update</td>
				<td>Delete</td>
			</tr>

		</thead>

		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.SkillId</td>
					<td>@item.SkillName</td>
					<td>
						<div class="progress" style="height: 25px;">
							<div class="progress-bar" role="progressbar"
								 style="width: @item.SkillPercentage%;"
								 aria-valuenow="@item.SkillPercentage"
								 aria-valuemin="0"
								 aria-valuemax="100">
								@item.SkillPercentage%
							</div>
						</div>
					</td>
					<td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-success">Update</a></td>
					<td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-danger">Delete</a></td>
				</tr>
			}


		</tbody>

	</table>
	<a href="/Skill/CreateSkill/" class="btn btn-secondary">Add New Skill</a>
</div>