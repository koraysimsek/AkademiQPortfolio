@model PortfolyoSitesi.Data.Experience

@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen flex items-center justify-center
            bg-gradient-to-br from-indigo-50 to-blue-100 p-6">

    <div class="w-full max-w-lg bg-white rounded-2xl shadow-xl p-8">

        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-extrabold text-gray-800">
                Update Experience
            </h1>
            <p class="text-gray-500 mt-1">
                Update your experience information
            </p>
        </div>

        <form method="post" class="space-y-6">

            @Html.HiddenFor(x => x.ExperienceId)

            <!-- Title -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Title
                </label>
                <input type="text"
                       name="Title"
                       value="@Model.Title"
                       required
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-gray-900
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500
                              outline-none transition" />
            </div>

            <!-- Company Name -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Company Name
                </label>
                <input type="text"
                       name="CompanyName"
                       value="@Model.CompanyName"
                       required
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-gray-900
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500
                              outline-none transition" />
            </div>

            <!-- Start Date -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Start Date
                </label>
                <input type="text"
                       name="StartDate"
                       value="@Model.StartDate"
                       required
                       placeholder="e.g. October 2024"
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-gray-900
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500
                              outline-none transition" />
            </div>

            <!-- End Date -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    End Date
                </label>
                <input type="text"
                       name="EndDate"
                       value="@Model.EndDate"
                       placeholder="e.g. December 2024 or Present"
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-gray-900
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500
                              outline-none transition" />
            </div>

            <!-- Description -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Description
                </label>
                <textarea name="Description"
                          rows="4"
                          required
                          class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                                 text-gray-900 resize-none
                                 focus:ring-2 focus:ring-indigo-500
                                 focus:border-indigo-500
                                 outline-none transition">@Model.Description</textarea>
            </div>

            <!-- Button -->
            <div class="pt-4">
                <button type="submit"
                        class="w-full flex items-center justify-center gap-2
                               bg-emerald-600 hover:bg-emerald-700
                               text-white font-semibold py-3 rounded-lg
                               transition shadow-lg shadow-emerald-200">

                    <svg class="w-5 h-5" fill="none" stroke="currentColor"
                         viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M5 13l4 4L19 7" />
                    </svg>

                    Update Experience
                </button>
            </div>

        </form>
    </div>

</div>

