
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen flex items-center justify-center
            bg-gradient-to-br from-indigo-50 to-blue-100 p-6 pt-80">

    <div class="w-full max-w-lg bg-white rounded-2xl shadow-xl p-8">

        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-extrabold text-gray-800">
                Add New About
            </h1>
            <p class="text-gray-500 mt-1">
                Enter your personal and education details
            </p>
        </div>

        <form method="post" class="space-y-6">

            <!-- Name Surname -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Name Surname
                </label>
                <input type="text"
                       name="NameSurname"
                       required
                       placeholder="e.g. Koray Şimşek"
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-black
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500 outline-none transition" />
            </div>

            <!-- Title -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Title
                </label>
                <input type="text"
                       name="Title"
                       required
                       placeholder="e.g. Software Developer"
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-black
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500 outline-none transition" />
            </div>

            <!-- University -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    University
                </label>
                <input type="text"
                       name="University"
                       required
                       placeholder="e.g. Istanbul University"
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-black
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500 outline-none transition" />
            </div>

            <!-- Section -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Section
                </label>
                <input type="text"
                       name="Section"
                       required
                       placeholder="e.g. Computer Engineering"
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-black
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500 outline-none transition" />
            </div>

            <!-- Start Year -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Start Year
                </label>
                <input type="number"
                       name="StartYear"
                       required
                       placeholder="e.g. 2021"
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-black
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500 outline-none transition" />
            </div>

            <!-- End Year -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    End Year
                </label>
                <input type="number"
                       name="EndYear"
                       placeholder="e.g. 2025"
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-black
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500 outline-none transition" />
            </div>

            <!-- Image Url -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Image URL
                </label>
                <input type="text"
                       name="ImageUrl"
                       placeholder="https://..."
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-black
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500 outline-none transition" />
            </div>

            <!-- Description -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Description
                </label>
                <textarea name="Description"
                          rows="4"
                          required
                          placeholder="Brief description about yourself"
                          class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                                 text-black resize-none
                                 focus:ring-2 focus:ring-indigo-500
                                 focus:border-indigo-500 outline-none transition"></textarea>
            </div>

            <!-- Button -->
            <div class="pt-4">
                <button type="submit"
                        class="w-full flex items-center justify-center gap-2
                               bg-indigo-600 hover:bg-indigo-700
                               text-white font-semibold py-3 rounded-lg
                               transition shadow-lg shadow-indigo-200">

                    <svg class="w-5 h-5" fill="none" stroke="currentColor"
                         viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 4v16m8-8H4" />
                    </svg>

                    Add About
                </button>
            </div>

        </form>
    </div>

</div>


