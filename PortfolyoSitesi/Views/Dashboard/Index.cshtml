@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- Scrollable Dashboard Content -->
<div class="flex-1 overflow-y-auto bg-blue-50 p-6 md:p-10">
    <div class="mx-auto max-w-7xl">

        <!-- Title Section -->
        <div class="mb-8 flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
            <div>
                <h3 class="text-2xl font-bold text-slate-800">Dashboard</h3>
                <p class="text-sm text-slate-500">
                    Real-time data updates for your platform.
                </p>
            </div>
        </div>

        <!-- Cards -->
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">

            <!-- Card: Projects -->
            <div class="group relative flex flex-col justify-between rounded-xl border border-blue-100 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
                <span class="absolute top-4 right-4 rounded-full bg-blue-50 px-3 py-1 text-xs font-semibold text-blue-600">
                    Projects Count : @ViewBag.ProjectsCount
                </span>
                <div class="flex items-start justify-between">
                    <div class="rounded-lg bg-blue-100 p-3 text-blue-600">
                        <span class="material-symbols-outlined text-3xl">folder</span>
                    </div>
                </div>
                <div class="mt-4">
                    <h4 class="text-3xl font-extrabold text-slate-900">@ViewBag.LastProject</h4>
                    <p class="text-sm text-slate-500">Most Recent Project</p>
                </div>
            </div>

            <!-- Card: Category -->
            <div class="group relative flex flex-col justify-between rounded-xl border border-blue-100 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
                <span class="absolute top-4 right-4 rounded-full bg-blue-50 px-3 py-1 text-xs font-semibold text-blue-600">
                    @ViewBag.MostCategoryName Category Projects Count : @ViewBag.MostCategoryCount
                </span>
                <div class="flex items-start justify-between">
                    <div class="rounded-lg bg-blue-100 p-3 text-blue-600">
                        <span class="material-symbols-outlined text-3xl">category</span>
                    </div>
                </div>
                <div class="mt-4">
                    <h4 class="text-3xl font-extrabold text-slate-900">@ViewBag.MostCategoryName</h4>
                    <p class="text-sm text-slate-500">Category with the Most Projects</p>
                </div>
            </div>

            <!-- Card: Top Skill -->
            <div class="group relative flex flex-col justify-between rounded-xl border border-blue-100 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
                <span class="absolute top-4 right-4 rounded-full bg-blue-50 px-3 py-1 text-xs font-semibold text-blue-600">
                    @ViewBag.TopSkillName Level : @ViewBag.TopSkillLevel
                </span>
                <div class="flex items-start justify-between">
                    <div class="rounded-lg bg-blue-100 p-3 text-blue-600">
                        <span class="material-symbols-outlined text-3xl">workspace_premium</span>
                    </div>
                </div>
                <div class="mt-4">
                    <h4 class="text-3xl font-extrabold text-slate-900">@ViewBag.TopSkillName</h4>
                    <p class="text-sm text-slate-500">Highest Level Skill</p>
                </div>
            </div>

            <!-- Card: Services -->
            <div class="group relative flex flex-col justify-between rounded-xl border border-blue-100 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
                <span class="absolute top-4 right-4 rounded-full bg-blue-50 px-3 py-1 text-xs font-semibold text-blue-600">
                    Services Count : @ViewBag.ServicesCount
                </span>
                <div class="flex items-start justify-between">
                    <div class="rounded-lg bg-blue-100 p-3 text-blue-600">
                        <span class="material-symbols-outlined text-3xl">design_services</span>
                    </div>
                </div>
                <div class="mt-4">
                    <h4 class="text-3xl font-extrabold text-slate-900">@ViewBag.LastService</h4>
                    <p class="text-sm text-slate-500">Most Recent Service</p>
                </div>
            </div>

            <!-- Card: Testimonials -->
            <div class="group relative flex flex-col justify-between rounded-xl border border-blue-100 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
                <span class="absolute top-4 right-4 rounded-full bg-blue-50 px-3 py-1 text-xs font-semibold text-blue-600">
                    Testimonials Count : @ViewBag.TestimonialsCount
                </span>
                <div class="flex items-start justify-between">
                    <div class="rounded-lg bg-blue-100 p-3 text-blue-600">
                        <span class="material-symbols-outlined text-3xl">reviews</span>
                    </div>
                </div>
                <div class="mt-4">
                    <h4 class="text-3xl font-extrabold text-slate-900">@ViewBag.LastTestimonial</h4>
                    <p class="text-sm text-slate-500">Most Recent Testimonial</p>
                </div>
            </div>

            <!-- Card: Messages -->
            <div class="group relative flex flex-col justify-between rounded-xl border border-blue-100 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
                <span class="absolute top-4 right-4 rounded-full bg-blue-50 px-3 py-1 text-xs font-semibold text-blue-600">
                    Messages Count : @ViewBag.MessagesCount
                </span>
                <div class="flex items-start justify-between">
                    <div class="rounded-lg bg-blue-100 p-3 text-blue-600">
                        <span class="material-symbols-outlined text-3xl">chat</span>
                    </div>
                </div>
                <div class="mt-4">
                    <h4 class="text-3xl font-extrabold text-slate-900">@ViewBag.LastMessageSender</h4>
                    <p class="text-sm text-slate-500">Last Message Sender</p>
                </div>
            </div>

            <!-- Card: First Experience -->
            <div class="group relative flex flex-col justify-between rounded-xl border border-blue-100 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between">
                    <div class="rounded-lg bg-blue-100 p-3 text-blue-600">
                        <span class="material-symbols-outlined text-3xl">work_history</span>
                    </div>
                </div>
                <div class="mt-4">
                    <h4 class="text-3xl font-extrabold text-slate-900">@ViewBag.FirstExperienceTitle</h4>
                    <p class="text-sm text-slate-500">First Experience</p>
                </div>
            </div>

            <!-- Card: First Project -->
            <div class="group relative flex flex-col justify-between rounded-xl border border-blue-100 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between">
                    <div class="rounded-lg bg-blue-100 p-3 text-blue-600">
                        <span class="material-symbols-outlined text-3xl">rocket_launch</span>
                    </div>
                </div>
                <div class="mt-4">
                    <h4 class="text-3xl font-extrabold text-slate-900">@ViewBag.FirstProjectName</h4>
                    <p class="text-sm text-slate-500">First Project</p>
                </div>
            </div>

            <!-- Card: Last Skill -->
            <div class="group relative flex flex-col justify-between rounded-xl border border-blue-100 bg-white p-6 shadow-sm hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between">
                    <div class="rounded-lg bg-blue-100 p-3 text-blue-600">
                        <span class="material-symbols-outlined text-3xl">psychology</span>
                    </div>
                </div>
                <div class="mt-4">
                    <h4 class="text-3xl font-extrabold text-slate-900">@ViewBag.LastSkill</h4>
                    <p class="text-sm text-slate-500">Most Recent Skill</p>
                </div>
            </div>

        </div>
    </div>
</div>
