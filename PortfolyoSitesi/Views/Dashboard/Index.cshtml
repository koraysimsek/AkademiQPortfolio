@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- Scrollable Dashboard Content -->
<div class="flex-1 overflow-y-auto bg-background-light p-6 dark:bg-background-dark md:p-10">
    <div class="mx-auto max-w-7xl">

        <!-- Title Section -->
        <div class="mb-8 flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
            <div>
                <h3 class="text-2xl font-bold text-slate-900 dark:text-white">Dashboard</h3>
                <p class="text-sm text-slate-500 dark:text-slate-400">
                    Real-time data updates for your platform.
                </p>
            </div>
        </div>

        <!-- Cards -->
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">

            <!-- Card -->
            <!-- Projects -->
<div class="group relative flex flex-col justify-between rounded-xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-800 dark:bg-slate-900">
    <span class="absolute top-4 right-4 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600 dark:bg-slate-800 dark:text-slate-300">
        Projects Count : @ViewBag.ProjectsCount
    </span>
    <div class="flex items-start justify-between">
        <div class="rounded-lg bg-blue-50 p-3 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400">
            <span class="material-symbols-outlined text-3xl">folder</span>
        </div>
    </div>
    <div class="mt-4">
        <h4 class="text-3xl font-extrabold text-slate-900 dark:text-white">@ViewBag.LastProject</h4>
        <p class="text-sm text-slate-500 dark:text-slate-400">Most Recent Project</p>
    </div>
</div>

<!-- Category with Most Projects -->
<div class="group relative flex flex-col justify-between rounded-xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-800 dark:bg-slate-900">
    <span class="absolute top-4 right-4 rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600 dark:bg-slate-800 dark:text-slate-300">
                    @ViewBag.MostCategoryName Category Projects Count : @ViewBag.MostCategoryCount
    </span>
    <div class="flex items-start justify-between">
        <div class="rounded-lg bg-blue-50 p-3 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400">
            <span class="material-symbols-outlined text-3xl">category</span>
        </div>
    </div>
    <div class="mt-4">
        <h4 class="text-3xl font-extrabold text-slate-900 dark:text-white">@ViewBag.MostCategoryName</h4>
        <p class="text-sm text-slate-500 dark:text-slate-400">Category with the Most Projects</p>
    </div>
</div>

<!-- Top Skill -->
