
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<script src="https://cdn.tailwindcss.com"></script>

<div class="min-h-screen flex items-center justify-center
            bg-gradient-to-br from-indigo-50 to-blue-100 p-6">

    <div class="w-full max-w-lg bg-white rounded-2xl shadow-xl p-8">

        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-extrabold text-gray-800">
                Add New Testimonial
            </h1>
            <p class="text-gray-500 mt-1">
                Enter testimonial details
            </p>
        </div>

        <form method="post" class="space-y-6">

            <!-- TestimonialId (Hidden) -->
            <input type="hidden" name="TestimonialId" />

            <!-- Testimonial Name -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Testimonial Name
                </label>
                <input type="text"
                       name="TestimonialName"
                       required
                       placeholder="e.g. John Doe"
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-black
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500
                              outline-none transition" />
            </div>

            <!-- Title -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Title
                </label>
                <input type="text"
                       name="Title"
                       required
                       placeholder="e.g. CEO, Software Engineer"
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-black
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500
                              outline-none transition" />
            </div>

            <!-- Company -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Company
                </label>
                <input type="text"
                       name="Company"
                       required
                       placeholder="e.g. Google"
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-black
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500
                              outline-none transition" />
            </div>

            <!-- Image URL -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Image URL
                </label>
                <input type="text"
                       name="ImageUrl"
                       placeholder="https://..."
                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                              text-black
                              focus:ring-2 focus:ring-indigo-500
                              focus:border-indigo-500
                              outline-none transition" />
            </div>

            <!-- Description -->
            <div>
                <label class="block text-sm font-semibold text-gray-700 mb-1">
                    Description
                </label>
                <textarea name="Description"
                          rows="4"
                          required
                          placeholder="What did the client say?"
                          class="w-full px-4 py-2.5 rounded-lg border border-gray-300
                                 text-black resize-none
                                 focus:ring-2 focus:ring-indigo-500
                                 focus:border-indigo-500
                                 outline-none transition"></textarea>
            </div>

            <!-- Button -->
            <div class="pt-4">
                <button type="submit"
                        class="w-full flex items-center justify-center gap-2
                               bg-indigo-600 hover:bg-indigo-700
                               text-white font-semibold py-3 rounded-lg
                               transition shadow-lg shadow-indigo-200">

                    <svg class="w-5 h-5" fill="none" stroke="currentColor"
                         viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 4v16m8-8H4" />
                    </svg>

                    Add Testimonial
                </button>
            </div>

        </form>
    </div>

</div>

