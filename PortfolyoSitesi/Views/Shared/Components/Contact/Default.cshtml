@model List<PortfolyoSitesi.Data.Contact>

@{
    Layout = null;
}

<section id="contact">
    <div class="section-title">
        <h2>İletişime <span>Geçin</span></h2>
        <div class="underline"></div>
        <p>@Model[0].Description</p>
    </div>

    <div class="contact-content">
        <div class="contact-info">
            <h3>İletişim Bilgileri</h3>
            @foreach (var item in Model)
            {
                
                <div class="contact-item">
                    <div class="contact-icon">📍</div>
                    <div class="contact-item-info">
                        <h4>Adres</h4>
                        <p>@item.Address</p>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-icon">📞</div>
                    <div class="contact-item-info">
                        <h4>Telefon</h4>
                        <p>@item.Phone</p>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-icon">📧</div>
                    <div class="contact-item-info">
                        <h4>E-posta</h4>
                        <p>@item.Email</p>
                    </div>
                </div>
            }
        </div>

        <div class="contact-form">
            <h3>Bir Mesaj Gönderin</h3>
            <form action="/Default/SendMessage" method="post">
                <div class="form-group">
                    <label for="name">Ad Soyad</label>
                    <input type="text" id="name" name="NameSurname" placeholder="Adınız" required>
                </div>
                <div class="form-group">
                    <label for="email">E-posta</label>
                    <input type="email" id="email" name="Email" placeholder="e-posta@adresiniz.com" required>
                </div>
                <div class="form-group">
                    <label for="subject">Konu</label>
                    <input type="text" id="subject" name="Subject" placeholder="Mesaj konusu" required>
                </div>
                <div class="form-group">
                    <label for="message">Mesaj</label>
                    <textarea id="message" name="MessageContent" placeholder="Nasıl yardımcı olabilirim?" required></textarea>
                </div>
                <button type="submit" class="submit-btn" onclick="alert('Mesaj başarıyla gönderildi!')">Mesaj Gönder</button>
            </form>
        </div>
    </div>
</section>
