@model List<PortfolyoSitesi.Data.Service>

@{
	Layout = null;
}

<section id="services">
	<div class="container">
		<div class="row mb-8">
			<div class="col-lg-10 col-xl-8 mx-lg-auto text-center">
				<div class="section-title h2 mb-3">
					<h2 class="mb-0">Services</h2>
					<span class="title-letter">H</span>
				</div>
				<p class="text-muted">My professional services and areas of specialization.</p>
			</div>
		</div>
		<div class="row g-4">
			@foreach (var item in Model)
			{
				<div class="col-md-6 col-xl-4">
					<div class="feature-block text-center h-100">
						<div class="feature-icon mx-auto">
							<i class="ti-settings"></i>
						</div>
						<h4 class="mb-2">@item.Title</h4>
						<p>@item.Description</p>
					</div>
				</div>
			}
		</div>
	</div>
</section>
