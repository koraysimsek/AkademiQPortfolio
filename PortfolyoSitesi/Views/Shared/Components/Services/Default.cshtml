@model List<PortfolyoSitesi.Data.Service>

@{
	Layout = null;
}

<section id="services">
    <div class="section-title">
        <h2>Hizmetlerim</h2>
        <div class="underline"></div>
        <p>Dijital ihtiyaçlarınız için profesyonel çözümler</p>
    </div>
    <div class="services-grid">
        @foreach (var item in Model)
        {
            <div class="service-card">
                <div class="service-icon">@(string.IsNullOrEmpty(item.IconUrl) ? "💻" : item.IconUrl)</div>
                <h3>@item.Title</h3>
                <p>@item.Description</p>
            </div>
        }
    </div>
</section>