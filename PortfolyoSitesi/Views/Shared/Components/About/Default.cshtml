@model List<PortfolyoSitesi.Data.About>

@{
	Layout = null;
}

<section id="about">
    <div class="section-title">
        <h2>Hakkımda</h2>
        <div class="underline"></div>
        <p>Benim ve yolculuğum hakkında biraz daha fazla bilgi edinin</p>
    </div>
    @foreach (var item in Model)
    {
        <div class="about-content">
            <div class="about-image">
                <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://images.unsplash.com/photo-1498050108023-c5249f4df085?w=500" : item.ImageUrl)" alt="@item.NameSurname">
            </div>
            <div class="about-text">
                <h3>@item.NameSurname</h3>
                <p>@item.Description</p>
                <div class="info-grid">
                    <div class="info-item"><strong>Ünvan:</strong> @item.Title</div>
                    <div class="info-item"><strong>Eğitim:</strong> @item.University - @item.Section</div>
                    <div class="info-item"><strong>Deneyim:</strong> @item.StartYear - @item.EndYear</div>
                </div>
                <a href="#contact" class="btn btn-primary">İletişime Geçin</a>
            </div>
        </div>
    }
</section>