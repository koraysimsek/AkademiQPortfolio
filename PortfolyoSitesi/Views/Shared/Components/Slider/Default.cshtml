@model List<PortfolyoSitesi.Data.Slider>

@{
    Layout = null;
}

<section id="home" class="slider-wrapper" style="height: 100vh; padding: 0;">
    <div class="slider" data-slick='{"dots":true, "arrows":true}' style="height: 100%;">
        @foreach (var item in Model)
        {
            <div class="slider-item" style="background-image: url('@(string.IsNullOrEmpty(item.ProfileImageUrl) ? "#" : item.ProfileImageUrl)'); background-size: cover; background-position: center; min-height: 100vh; display: flex !important; align-items: center; justify-content: center;">
                <div class="slider-content">
                    <h1>@item.Title</h1>
                    <p>@item.NameSurname</p>
                    <div class="cta-buttons">
                        <a href="#projects" class="btn btn-primary">Projeleri Gör</a>
                        <a href="#contact" class="btn btn-secondary">İletişime Geçin</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>