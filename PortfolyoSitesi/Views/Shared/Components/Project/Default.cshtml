@model List<PortfolyoSitesi.Data.Project>

@{
	Layout = null;
}

<div class="container">
	<div class="portfolio-container isotope-container row my-n2 mx-sm-n2">

		@foreach (var item in Model)
		{
			<div class="isotope-item col-sm-6 col-lg-4 py-2 px-sm-2
                        filter-@item.Category.CategoryName.Replace(" ", "-")">

				<div class="portfolio-item details-inside position-relative">

					<div class="item-media">
						<img src="@item.ImageUrl" alt="">
					</div>

					<div class="item-overlay bg-dark"></div>

					<div class="item-details text-center">

						<h4 class="h5">@item.ProjectName</h4>
						<p class="font-italic">@item.Category.CategoryName</p>

						<!-- 🔗 Project Link Button -->
						@if (!string.IsNullOrEmpty(item.ProjectLink))
						{
							<a href="@item.ProjectLink"
							   target="_blank"
							   class="btn btn-sm btn-outline-light mt-2">
								View Project
							</a>
						}
						<!-- 🔗 Project Link Button -->

					</div>

				</div>
			</div>
		}

	</div>
</div>



</section>