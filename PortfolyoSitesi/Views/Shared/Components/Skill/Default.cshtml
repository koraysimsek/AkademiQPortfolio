@model List<PortfolyoSitesi.Data.Skill>

@{
	Layout = null;
}

<section id="skills">
    <div class="section-title">
        <h2>Yeteneklerim</h2>
        <div class="underline"></div>
        <p>Günlük hayatımda hakim olduğum ve kullandığım teknolojiler ve araçlar</p>
    </div>
    <div class="skills-grid">
        <div class="skill-card">
            <h3>Teknik Yetenekler</h3>
            @foreach (var item in Model)
            {
                <div class="skill-bar">
                    <div class="skill-name"><span>@item.SkillName</span><span>@item.SkillPercentage%</span></div>
                    <div class="progress-bar"><div class="progress" style="width: @item.SkillPercentage%"></div></div>
                </div>
            }
        </div>
    </div>
</section>