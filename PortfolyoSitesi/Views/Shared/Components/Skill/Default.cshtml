@model List<PortfolyoSitesi.Data.Skill>

@{
	Layout = null;
}

<section id="skills" class="bg-light">
	<div class="container">
		<div class="row mb-8">
			<div class="col-lg-10 col-xl-8 mx-lg-auto text-center">
				<div class="section-title h2 mb-3">
					<h2 class="mb-0">Yetenekler</h2>
					<span class="title-letter">Y</span>
				</div>
				<p class="text-muted">My Professional Skills and Areas of Expertise</p>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 mb-5 mb-md-0">

				@foreach (var item in Model)
				{
					<p class="h6 mb-2">@item.SkillName</p>
					<div class="progress mb-4">
						<div class="progress-bar" role="progressbar" style="width: @item.SkillPercentage%" aria-valuenow="@item.SkillPercentage" aria-valuemin="0" aria-valuemax="100"></div>
					</div>
				}

			</div>

		</div>
	</div>
</section>