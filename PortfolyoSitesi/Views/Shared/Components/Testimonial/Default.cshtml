@model List<PortfolyoSitesi.Data.Testimonial>

@{
    Layout = null;
}

<section id="testimonials">
    <div class="section-title">
        <h2>Referanslar</h2>
        <div class="underline"></div>
        <p>Geliştirdiğim projelerde performans, sürdürülebilirlik ve temiz kod odaklı çalışırım. Aşağıdaki referanslar, bu yaklaşımın gerçek projelerdeki yansımalarını göstermektedir.</p>
    </div>
    
    <div class="testimonials-grid">
        @foreach (var item in Model)
        {
            <div class="testimonial-card">
                <div class="quote-icon">"</div>
                <p>@item.Description</p>
                <div class="client-info">
                    <div class="client-avatar">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" alt="@item.TestimonialName">
                        }
                        else
                        {
                            <span>@item.TestimonialName?[0]</span>
                        }
                    </div>
                    <div class="client-details">
                        <h4>@item.TestimonialName</h4>
                        <span>@item.Title, @item.Company</span>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
